# Environment Configuration
ENV=dev

# Database Configuration
DB_URL=postgresql://coinglass:your_db_password@localhost:5432/coinglass
DB_PASSWORD=your_secure_db_password

# Redis Configuration
REDIS_URL=redis://localhost:6379

# CoinGlass API Configuration
CG_API_KEY=REPLACE_ME

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=REPLACE_ME
TELEGRAM_CHAT_ID=-100REPLACE

# Security Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here_make_it_long_and_secure
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# AWS Configuration (for backups)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
BACKUP_S3_BUCKET=coinglass-backups

# Monitoring Configuration
LOG_LEVEL=INFO
METRICS_ENABLED=true
TRACING_ENABLED=true

# Performance Configuration
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
REDIS_MAX_CONNECTIONS=100
WORKER_CONCURRENCY=4
BATCH_SIZE=1000
MAX_RETRIES=3

# Business Configuration
SIGNAL_COOLDOWN_MINUTES=5
MAX_ALERTS_PER_HOUR=20
BACKUP_RETENTION_DAYS=30

# Trading Configuration
SYMBOLS=BTC,ETH,SOL
EXCHANGES=Binance,OKX,Bybit
FETCH_INTERVAL_SECONDS=30
WS_RECONNECT_SECONDS=5
API_PORT=8080

# Cache Configuration
CACHE_TTL_SECONDS=300